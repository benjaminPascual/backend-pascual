<h1>Cart</h1>
<div id="{{cartId}}" class="cart-list">
{{#if products}}
    {{#each products}}
        <div class="product-item" id={{product._id}} >
            <p>{{product.title}}</p>
            <p>{{product.price}}</p>
            <p>amount: {{quantity}}</p>
            <button onclick="removeProduct(event)">Remove</button>
        </div>
    {{/each}}
{{else}}
    <p>The cart is empty</p>
{{/if}}
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/script.cart.js"></script>